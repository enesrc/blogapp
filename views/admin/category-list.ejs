<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <% if (action == "edit") { %>
                    <div class="alert alert-success">
                        <%= categoryid %>. kategori güncellendi.
                    </div>
                <% } else if (action == "delete") { %>
                    <div class="alert alert-danger">
                        Kategori silindi.
                    </div>
                <% } else if (action == "create") { %>
                    <div class="alert alert-success">
                        Kategori eklendi.
                    </div>
                <% } %>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">Id</th>
                            <th>Adı</th>
                            <th style="width: 130px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                            <% categories.forEach(category => { %>
                                <tr>
                                    <td>#<%= category.categoryid %></td>
                                    <td><%= category.categoryname %></td>
                                    <td>
                                        <a class="btn btn-sm btn-primary " href="/admin/category/<%= category.categoryid %>">Edit</a>
                                        <a class="btn btn-sm btn-danger " href="/admin/category/delete/<%= category.categoryid %>">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>