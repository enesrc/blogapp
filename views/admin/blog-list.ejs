<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <% if (action == "edit") { %>
                    <div class="alert alert-success">
                        <%= blogid %>. blog güncellendi.
                    </div>
                <% } else if (action == "delete") { %>
                    <div class="alert alert-danger">
                        Blog silindi.
                    </div>
                <% } else if (action == "create") { %>
                    <div class="alert alert-success">
                        Blog eklendi.
                    </div>
                <% } %>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">Id</th>
                            <th style="width: 150px;">Resim</th>
                            <th>Başlık</th>
                            <th style="width: 130px;">İşlemler</th>
                        </tr>

                    </thead>
                    <tbody>
                            <% blogs.forEach(blog => { %>
                                <tr>
                                    <td>#<%= blog.blogid %></td>
                                    <td>
                                        <img src="/static/images/<%= blog.resim %>" class="img-fluid" alt="">
                                    </td>
                                    <td><%= blog.baslik %></td>
                                    <td>
                                        <a class="btn btn-sm btn-primary " href="/admin/blogs/<%= blog.blogid %>">Edit</a>
                                        <a class="btn btn-sm btn-danger " href="/admin/blog/delete/<%= blog.blogid %>">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>